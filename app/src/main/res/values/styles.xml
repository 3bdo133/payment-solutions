<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontPath">OpenSans-Regular.ttf</item>
    </style>

    <style name="Color1SwitchStyle">
        <item name="colorControlActivated">#76FF03</item>
        <item name="colorControlNormal">#D50000</item>
        <item name="colorControlHighlight">#D50000</item>
        <item name="fontPath">OpenSans-Regular.ttf</item>
    </style>

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/spinner</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
        <item name="fontPath">OpenSans-Regular.ttf</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="android:textColorSecondary">@color/colorPrimaryDark</item>
        <item name="actionMenuTextColor">@color/colorPrimaryDark</item>
        <item name="fontPath">OpenSans-Regular.ttf</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="android:textColorSecondary">@color/colorPrimaryDark</item>
        <item name="actionMenuTextColor">@color/colorPrimaryDark</item>
        <item name="fontPath">OpenSans-Regular.ttf</item>
    </style>

    <style name="custom" parent="AppTheme.PopupOverlay">
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#FFFFFF</item>
        <item name="actionMenuTextColor">#FFFFFF</item>
        <item name="fontPath">OpenSans-Regular.ttf</item>
    </style>

    <style name="custom2" parent="AppTheme.AppBarOverlay">
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#FFFFFF</item>
        <item name="actionMenuTextColor">#FFFFFF</item>
        <item name="fontPath">OpenSans-Regular.ttf</item>
    </style>

</resources>
